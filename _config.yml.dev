# Build settings
markdown: kramdown

# Prose settings
prose:
  siteurl: 'http://ultrafitlifestyle.github.io'
  relativeLinks: 'https://github.com/UltraFitLifestyle/UltraFitLifestyle.github.io/blob/master/links.jsonp'
  media: 'images'
  ignore:
    - _config.yml
    - /_layouts
    - /_includes
    - /_data
    - /_js
    - /public
  metadata:
    _posts:
      - name: "layout"
        field:
          element: "hidden"
          value: "post"
      - name: "title"
        field:
          element: "text"
          label: "Post title"
      - name: "author"
        field:
          element: "hidden"
          value: "Rachel-Tipton"
      - name: "category"
        field:
          element: "multiselect"
          label: "Category"
          placeholder: "Choose Tags"
          options:
            - name: "Apples"
              value: "apples"
            - name: "Bananas"
              value: "bananas"          
      - name: "tags"
        field:
          element: "multiselect"
          label: "Add Tags"
          placeholder: "Choose Tags"
          options:
            - name: "Apples"
              value: "apples"
            - name: "Bananas"
              value: "bananas"
    _posts/static:
      - name: "layout"
        field:
          element: "hidden"
          value: "page"
      - name: "permalink"
        field:
          element: "text"
          label: "Permalink"
          value: ""
